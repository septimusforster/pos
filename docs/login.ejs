                </g>
            </g>
        </svg>

        <h6>Student Login</h6>
        <input type="text" name="umail" id="umail" placeholder="Enter email" autocomplete="off">
        <input type="password" name="upass" id="upass" placeholder="Enter key">

        <label onclick="showKey()" for="showHide"><input type="checkbox" name="showHide" id="showHide">Show key</label>

        <button type="submit">Login</button>
    </form>
    <script>
        var passwordInput = document.getElementById('upass');
        var showHide = document.getElementById('showHide');
        const label = document.querySelector('label');

        function showKey() {
            if(showHide.checked){
                passwordInput.type = 'text';
            } else {
                passwordInput.type = 'password';
            }
        }

    </script>
</body>
</html>